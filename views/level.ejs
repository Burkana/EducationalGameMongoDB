    window.currentLevelNumber = <%= level ? level.number : 1 %>;
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/controllers/progress.js"></script>
