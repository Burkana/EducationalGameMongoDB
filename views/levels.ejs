<!DOCTYPE html>
<html lang="bg">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= level.title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body { background: #f8f9fa; }
    .codeInput { width: 100%; font-family: monospace; padding: 6px; margin-bottom: 10px; }
    .success { color: green; }
    .error { color: red; }
  </style>
</head>
<body class="p-4">
  <div class="container">
    <h1><%= level.title %></h1>
    <div class="mb-3"><%- level.instructions %></div>
    <div><%- level.code %></div>

    <button id="runBtn" class="btn btn-primary mt-3">Изпълни</button>
    <button id="nextLevelBtn" class="btn btn-success mt-3" style="display:none">Следващо ниво</button>
    <div id="outputWindow" class="mt-3"></div>

    <a href="/main" class="btn btn-secondary mt-3">⬅ Назад към менюто</a>
  </div>

  <script>
    const input = document.getElementById('codeInput');
    const runBtn = document.getElementById('runBtn');
    const output = document.getElementById('outputWindow');
    const nextBtn = document.getElementById('nextLevelBtn');
    const levelNum = <%= level.number %>;

    runBtn.addEventListener('click', () => {
      const code = input.value.trim();
      let correct = false;

      <% if (level.number === 1) { %>
        correct = /^\s*cout\s*<<\s*"Hello,\s*C\+\+\s*World!"\s*;\s*$/.test(code);
      <% } else if (level.number === 2) { %>
        correct = /^\s*cout\s*<<\s*"I love programming!"\s*;\s*$/.test(code);
      <% } %>

      output.innerHTML = '';
      if (correct) {
        output.innerHTML = '<span class="success">✅ Нивото е преминато!</span>';
        nextBtn.style.display = 'inline-block';
      } else {
        output.innerHTML = '<span class="error">⛔ Грешка! Опитайте отново.</span>';
        nextBtn.style.display = 'none';
      }
    });

    nextBtn.addEventListener('click', () => {
      window.location.href = '/levels/' + (levelNum + 1);
    });
  </script>
</body>
</html>
